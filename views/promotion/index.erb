<hr>
<h3><span>Current Promotions below:</span></h3>
<hr>

<table>
  <tr>
    <th>Supplier</th>
    <th>Discount</th>
    <th>Number of affected products</th>
  </tr>
  <% @promotions.each do |promotion| %>
  <tr>
    <td>
      <%= Supplier.find(promotion.supplier_id).name %>
    </td>
    <td>
      <%= promotion.percentage %>% Discount
    </td>
    <td>
      <%= Supplier.drinks(promotion.supplier_id).length %>
    </td>
    <td><form action="/promotions/<%= promotion.id %>/activate" method="POST">
      <input type="submit" value="Activate Promotion">
    </form>
  </td>
  <td><form action="/promotions/<%= promotion.id %>/delete" method="POST">
    <input type="submit" value="Delete Promotion">
  </form>
</td>
</tr>
<% end %>

</table>

<p>
  <a href="/promotions/new"><span>Click to add new promotion
  </span></a>
</p>
