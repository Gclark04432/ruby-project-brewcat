<hr>
<h3><span>Here are the current suppliers you work with:</span></h3>
<hr>

<table>

  <style>
    .invisible {
      border: none;
    }
  </style>

  <tr>
    <th>Supplier Name</th>
    <th>Supplier Active?</th>

  </tr>
  <% @suppliers.map do |supplier| %>
  <tr>
    <td>
      <a href="suppliers/<%= supplier.id %>"><%= supplier.name %></a>
    </td>
    <td>
      <% if supplier.active == "t" %>
      Yes
      <% else %>
      No
      <% end %>
    </td>
    <% end %>
  </tr>
</table>

<p>
  <a href="/suppliers/new"><span>Click to create new supplier</span></a>
</p>
