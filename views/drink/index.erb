<p>Here are the drinks currently in your inventory</p>

<div class = "drinks">
  <ul>
    <% @drinks.map do |drink| %>
    <li><p class="bold">
      <% if drink.stock_level.to_i <= 10 %>
      <a href="drinks/<%= drink.id %>"><%= drink.name %> !Low Stock Level!</a>
      <% else %>
      <a href="drinks/<%= drink.id %>"><%= drink.name %></a>
      <% end %>
    </p>

  </li>
  <hr>
  <% end %>
</ul>
</div>

<form action="/drinks" method="GET">

  <p>Filter by supplier below</p>
  <label for="supplier">Supplier:</label>
  <select name="supplier" id="supplier">
    <% @suppliers.each do |supplier| %>
    <option value=<%= supplier.id %>><%= supplier.name.capitalize %></option>
    <% end %>
  </select>

  <input type="submit" value="Filter">

</form>


<a href="/drinks/new">Click to create new drink</a>
